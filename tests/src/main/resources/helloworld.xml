<?xml version="1.0" encoding="UTF-8"?>
<nifty>
	<!-- +++++++++++++++++++++++++++++++++++++++ -->
	<!-- start screen -->
	<!-- +++++++++++++++++++++++++++++++++++++++ -->
	<screen id="start"
		controller="de.lessvoid.nifty.java2d.tests.controllers.HelloWorldMainScreenController">
		<layer id="layer" backgroundColor="#003f" childLayout="center">
			<panel id="panel" height="25%" width="35%" align="center"
				valign="center" backgroundColor="#f60f" childLayout="center"
				visibleToMouse="true">
				<interact onClick="quit()" />
				<effect>
					<onStartScreen name="move" mode="in" direction="top"
						length="300" startDelay="0" inherit="true" />
					<onEndScreen name="move" mode="out" direction="bottom"
						length="300" startDelay="0" inherit="true" />
					<onHover name="pulsate" scaleFactor="0.008" startColor="#f600"
						endColor="#ffff" post="true" />
				</effect>
				<text id="text" font="arial.fnt" color="#000f" text="Hello World!"
					align="center" valign="center" />
			</panel>
		</layer>
	</screen>
</nifty>

  <screen id="start" controller="de.lessvoid.nifty.examples.helloworld.HelloWorldStartScreen">
    <layer backgroundColor="#003f" childLayout="absolute">
      <panel height="25%" width="35%" align="center" valign="center" childLayout="center" x="100px" y="100px" visibleToMouse="true" childClip="true">
        <panel height="50%" width="50%" backgroundColor="#f00f" align="center" valign="center" visibleToMouse="true">
          <effect>
            <onHover name="move" direction="left" mode="out" length="1000">
              <hover hoverFalloffType="linear" hoverWidth="100%" hoverHeight="100%" hoverFalloffConstraint="vertical" />
            </onHover>
          </effect>
        </panel>
        <effect>
          <onActive name="gradient" direction="vertical">
            <value offset="0%" color="#f00f" />
            <value offset="20%" color="#0f0f" />
            <value offset="60%" color="#00ff" />
            <value offset="70%" color="#ff0f" />
            <value offset="100%" color="#ffff" />
          </onActive>
        </effect>
      </panel>
    </layer>
  </screen>