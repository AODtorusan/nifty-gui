<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://nifty-gui.lessvoid.com/nifty-gui">
  <useStyles filename="nifty-default-styles.xml"/>
  <useControls filename="nifty-default-controls.xml"/>
  <screen id="start">
    <layer id="layer" childLayout="center" backgroundColor="#dddf">
      <panel id="tabs" childLayout="vertical" valign="center" align="center" width="50%" height="50%">
        <control id="edit_tabs" name="tabGroup">
          <control id="tab_1" name="tab" caption="Tab #1" childLayout="vertical" height="100%">
            <control align="center" valign="center" name="label" text="Content for Tab #1" width="100%" height="100%"
                />
          </control>
          <control id="tab_2" name="tab" caption="Tab #2" childLayout="vertical" height="100%">
            <control align="center" valign="center" name="label" text="Content for Tab #2" width="100%" height="100%"/>
          </control>
        </control>
      </panel>
    </layer>
  </screen>
</nifty>