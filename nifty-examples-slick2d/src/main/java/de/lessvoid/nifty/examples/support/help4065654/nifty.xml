<?xml version="1.0" encoding="UTF-8"?>
<nifty>
  <screen id="screen" controller="poa.hud.HudController">
    <layer id="layer" childLayout="horizontal" backgroundColor="#000000">
      <panel id="left" width="75px" height="100%" backgroundColor="#554433">
        <effect>
          <onShow name="move" mode="in" direction="left" length="300" startDelay="0" inherit="true" />
          <onHide name="move" mode="out" direction="left" length="300" startDelay="0" inherit="true" />
        </effect>
      </panel>
      <panel width="*" childLayout="vertical">
        <panel id="top" height="75px" width="100%" backgroundColor="#553344">
          <effect>
            <onShow name="move" mode="in" direction="top" length="300" startDelay="0" inherit="true" />
            <onHide name="move" mode="out" direction="top" length="300" startDelay="0" inherit="true" />
          </effect>
        </panel>
        <panel height="*" />
        <panel id="bottom" height="75px" width="100%" backgroundColor="#334455">
          <effect>
            <onShow name="move" mode="in" direction="bottom" length="300" startDelay="0" inherit="true" />
            <onHide name="move" mode="out" direction="bottom" length="300" startDelay="0" inherit="true" />
          </effect>
        </panel>
      </panel>
      <panel id="right" width="75px" height="100%" backgroundColor="#443355">
        <effect>
          <onShow name="move" mode="in" direction="right" length="300" startDelay="0" inherit="true" />
          <onHide name="move" mode="out" direction="right" length="300" startDelay="0" inherit="true" />
        </effect>
      </panel>
    </layer>
  </screen>
</nifty> 