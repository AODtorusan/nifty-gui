<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">

  <!-- include the styles we want to use -->
  <useStyles filename="nifty-default-styles.xml" />

  <!-- include the default controls -->
  <useControls filename="nifty-default-controls.xml" />

  <!--
    this control will make our live a little easier. it is just a panel that is shared by all screens so
    that the panel looks the same on each screen. the only thing we're changing is the content of the
    #container inside of the control. this way we'll add individual content on each screen.
   -->
  <controlDefinition name="demoPanel" childRootId="#container">
    <panel childLayout="vertical" valign="center" align="center" width="50%" height="50%" style="nifty-panel">
      <text width="100%" style="base-font" text="$caption" backgroundColor="#8008" height="25px"/>
      <panel width="100%" height="7px" />
      <panel id="#container" width="100%" height="*" childLayout="vertical"/>
      <panel width="100%" height="7px" />
      <control id="reset" name="button" label="Restart Screen" align="center" />
    </panel>
  </controlDefinition>

  <!--
    button demonstration
  -->
  <screen id="screenButton" controller="de.lessvoid.nifty.examples.defaultControls.ScreenButton" inputMapping="de.lessvoid.nifty.examples.defaultControls.InputMapping">
    <layer childLayout="center">
      <control name="demoPanel" caption="Button Demonstration">
        <control id="button" name="button" label="Button" align="center" />
      </control>
    </layer>
  </screen>

  <!--
    chat control demonstration
