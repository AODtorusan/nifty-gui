<?xml version="1.0" encoding="UTF-8"?>
<nifty-styles>
  <style id="nifty-drop-down#panel">
    <attributes childLayout="horizontal" height="28px" focusable="true"/>
  </style>

  <style id="nifty-drop-down#panel-text">
    <attributes childLayout="overlay" width="*" />
    <effect>
      <onClick name="focus" targetElement="icon" />
      <onClick name="focus" targetElement="text" />
    </effect>
  </style>

  <style id="nifty-drop-down#panel-icon">
    <attributes childLayout="overlay" width="28px" height="28px" />
    <effect>
      <onClick name="focus" targetElement="icon" />
      <onClick name="focus" targetElement="text" />
    </effect>
  </style>

  <style id="nifty-drop-down#text" base="base-font">
    <attributes color="#000f" textHAlign="left" textVAlign="center" height="28px" width="*" />
    <effect>
      <onFocus name="imageOverlay" post="false" filename="textfield/field-selected.png" imageMode="resize:1,30,1,1,1,30,1,30,1,30,1,1" />
      <onFocus name="textColor" post="false" color="#ffff" />
      <onActive name="imageOverlay" post="false" filename="textfield/field.png" imageMode="resize:1,30,1,1,1,30,1,30,1,30,1,1" />
    </effect>
  </style>
  
  <style id="nifty-drop-down#icon">
    <attributes filename="dropdown/drop-down-icon-black.png" width="28px" height="28px" imageMode="subImage:0,0,28,28" />
    <effect>
      <onClick name="imageOverlay" filename="dropdown/drop-down-icon-black.png" width="28px" height="28px" imageMode="subImage:56,0,28,28" post="true" />
      <onFocus name="imageOverlay" filename="dropdown/drop-down-icon-black.png" width="28px" height="28px" imageMode="subImage:28,0,28,28" post="true" />
    </effect>
  </style>

  <style id="nifty-drop-down#list-panel">
    <attributes childLayout="vertical" />
    <effect>
      <onStartScreen name="clip" length="150" inherit="true" post="false" />
      <onStartScreen name="move" length="150" timeType="exp" factor="2.5" mode="fromOffset" offsetY="-100" inherit="true" onStartEffect="fixOffset()"/>
      <onStartScreen name="fade" length="150" startColor="#0000" endColor="#000c" inherit="true"/>
      <onEndScreen name="clip" length="150" inherit="true" post="false" />
      <onEndScreen name="move" length="150" timeType="exp" factor="2.5" mode="toOffset" offsetY="-100" onStartEffect="fixOffset()" inherit="true"/>
      <onEndScreen name="imageOverlay" length="150" alpha="#c" post="false" filename="textfield/field-selected.png" imageMode="resize:1,30,1,1,1,30,1,30,1,30,1,1" />
      <onActive name="imageOverlay" alpha="#c" post="false" filename="textfield/field-selected.png" imageMode="resize:1,30,1,1,1,30,1,30,1,30,1,1" />
    </effect>
  </style>

  <style id="nifty-drop-down#text-item" base="base-font">
    <attributes textHAlign="left" textVAlign="center" width="100%" />
    <effect>
      <onHover name="focus" />
      <onFocus name="colorBar" color="#000f" post="false" />
    </effect>
  </style>
</nifty-styles>
