<?xml version="1.0" encoding="UTF-8"?>
<nifty-styles>
  <!-- +++++++++++++++++++++++++++++++++++++ -->
  <!-- style for the button background panel -->
  <!-- +++++++++++++++++++++++++++++++++++++ -->
  <style id="nifty-button#panel">
    <attributes backgroundImage="button/black-button-normal.png" align="center" width="152px" height="32px" childLayout="center" visibleToMouse="true" />
    <effect>
      <onHover name="imageOverlay" filename="button/black-button-hover.png" post="true" resize="5px" />
      <onFocus name="imageOverlay" filename="button/black-button-hover.png" post="true" resize="5px" />
    </effect>
  </style>

  <!-- +++++++++++++++++++++++++++++++++++++ -->
  <!-- style for the button text -->
  <!-- +++++++++++++++++++++++++++++++++++++ -->
  <style id="nifty-button#text" base="button-font">
    <attributes align="center" valign="center" textHAlign="center" textVAlign="center" visibleToMouse="true"/>
  </style>
</nifty-styles>
