<?xml version="1.0" encoding="UTF-8"?>
<nifty>

  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <!-- load default styles and controls -->
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <useStyles filename="nifty-default-styles.xml" />
  <useStyles filename="slick/graviton-styles.xml" />
  <useControls filename="nifty-default-controls.xml" />

  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <!-- start screen -->
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <screen id="start" controller="de.lessvoid.nifty.examples.slick.MenuState">
    <layer id="back" childLayout="center">
      <panel id="panel" height="100%" width="100%" backgroundImage="slick/menu-background.png">
        <effect>
          <onStartScreen name="fade" startColor="#0000" endColor="#ffff" post="false" length="250"/>
        </effect>
      </panel>
    </layer>
    <layer id="layer" childLayout="vertical">
      <panel id="top" height="40%" childLayout="center">
        <image id="logo" filename="slick/gravitron.png" align="center" valign="center">
          <effect>
            <onStartScreen name="move" direction="top" mode="in" length="250"/>
          </effect>
        </image>
      </panel>
    </layer>
  </screen>

  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <!-- start screen -->
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <screen id="mainMenu" controller="de.lessvoid.nifty.examples.slick.MenuState">
    <layer id="back" childLayout="center">       
      <panel id="panel" height="100%" width="100%" backgroundImage="slick/menu-background.png"/>
    </layer>
    <layer id="layer" childLayout="vertical">
      <panel id="top" height="40%" childLayout="center">
        <image id="logo" filename="slick/gravitron.png" align="center" valign="center"/>
      </panel>
      <panel id="menu" height="20%" align="center" valign="center" childLayout="center">
        <panel id="mainMenu" style="menu">
          <label id="newGame" text="New Game" style="menu-item" hintText="Start a New Game">
            <interact onClick="newGame()"/>
          </label>
          <label id="hostGame" text="Host Game" style="menu-item" hintText="Host a New Game">
            <interact onClick="hostGame()"/>
          </label>
          <label id="joinGame" text="Join Game" style="menu-item" hintText="Join a Network Game">
            <interact onClick="joinGame()"/>
          </label>
          <label id="exit" text="Exit" style="menu-item" hintText="Exit the Game">
            <interact onClick="exit()"/>
          </label>
        </panel>
      </panel>
      <panel id="bottom" height="40%">
      </panel>
    </layer>
  </screen>
</nifty>
