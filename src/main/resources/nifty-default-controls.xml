<?xml version="1.0" encoding="UTF-8"?>
<nifty-controls>

  <!-- +++++++++++++++++++++++++++++++++++++++ -->  
  <!-- textfield control -->
  <!-- +++++++++++++++++++++++++++++++++++++++ -->  
  <controlDefinition name="textfield" controller="de.lessvoid.nifty.controls.textfield.TextFieldControl" inputMapping="de.lessvoid.nifty.input.mapping.StandardTextField">
    <panel id="textfield-panel" style="nifty-textfield-panel">
      <panel id="textfield-field" style="nifty-textfield-field">
        <interact onClick="onClick()" onClickMouseMove="onClickMouseMove()" />
        <text id="textfield-text" style="nifty-textfield-text" text="">
          <textSelection textColor="#f0ff" />
        </text>
      </panel>
      <panel id="textfield-cursor-panel" style="nifty-textfield-cursor-panel">
        <image id="textfield-cursor" style="nifty-textfield-cursor"/>
      </panel>
    </panel>
  </controlDefinition>

  <!-- +++++++++++++++++++++++++++++++++++++++ -->  
  <!-- button control -->
  <!-- +++++++++++++++++++++++++++++++++++++++ -->  
  <controlDefinition style="nifty-button" name="button" controller="de.lessvoid.nifty.controls.button.ButtonControl">
    <panel style="#panel">
      <label style="#text" text="$buttonText" />
    </panel>
  </controlDefinition>

</nifty-controls>
