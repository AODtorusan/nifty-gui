<?xml version="1.0" encoding="UTF-8"?>
<nifty-controls>

  <!-- +++++++++++++++++++++++++++++++++++++++ -->  
  <!-- textfield control -->
  <!-- +++++++++++++++++++++++++++++++++++++++ -->  
  <controlDefinition name="textfield" controller="de.lessvoid.nifty.controls.textfield.TextFieldControl" inputMapping="de.lessvoid.nifty.input.mapping.StandardTextField">
    <panel id="textfield-panel" style="nifty-textfield-panel">
      <panel id="textfield-field" style="nifty-textfield-field" focusable="true">
        <interact onClick="onClick()" onClickMouseMove="onClickMouseMove()" />
        <text id="textfield-text" style="nifty-textfield-text" text="">
          <textSelection textColor="#f0ff" />
        </text>
      </panel>
      <panel id="textfield-cursor-panel" style="nifty-textfield-cursor-panel">
        <image id="textfield-cursor" style="nifty-textfield-cursor"/>
      </panel>
    </panel>
  </controlDefinition>

  <!-- +++++++++++++++++++++++++++++++++++++++ -->  
  <!-- button control -->
  <!-- +++++++++++++++++++++++++++++++++++++++ -->  
  <controlDefinition style="nifty-button" name="button" controller="de.lessvoid.nifty.controls.button.ButtonControl">
    <panel id="button-panel" style="#panel" focusable="true">
      <label id="button-text" style="#text" text="$label" />
    </panel>
  </controlDefinition>

  <!-- +++++++++++++++++++++++++++++++++++++++ -->  
  <!-- nifty ImageSelect control -->
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <controlDefinition name="imageSelect" controller="de.lessvoid.nifty.controls.imageSelect.ImageSelectControl">
    <panel align="center" valign="center" childLayout="horizontal" imageList="$imageList">
      <panel width="32px" align="center" valign="center" childLayout="center">
        <image id="back" filename="imageSelect/imageSelectArrowLeft.png" align="center" valign="center">
          <interact onClick="backClick()"/>
          <effect>
            <onHover name="hoverImageOverlay" filename="imageSelect/imageSelectArrowLeftHover.png" />
          </effect>
        </image>
      </panel>
      <panel align="center" valign="center" childLayout="center">
        <image id="image" align="center" valign="center" />
      </panel>
      <panel width="32px" align="right" valign="center" childLayout="center">
        <image id="forward" filename="imageSelect/imageSelectArrowRight.png" align="center" valign="center">
          <interact onClick="forwardClick()"/>
          <effect>
            <onHover name="hoverImageOverlay" filename="imageSelect/imageSelectArrowRightHover.png" />
          </effect>
        </image>
      </panel>
    </panel>
  </controlDefinition>
</nifty-controls>
