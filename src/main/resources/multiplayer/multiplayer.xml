<?xml version="1.0" encoding="UTF-8"?>
<nifty>
  <registerEffect name="hide" class="de.lessvoid.nifty.effects.general.Hide" />
  <registerEffect name="textSize" class="de.lessvoid.nifty.effects.hover.TextSize" />

  <!-- +++++++++++++++++++++++++++++++++++++++ -->  
  <!-- styles -->
  <!-- +++++++++++++++++++++++++++++++++++++++ -->  
  <style id="default-textfield-panel">
    <attributes backgroundColor="#555f" childLayout="overlay" height="40px" />
  </style>

  <style id="default-textfield-field">
    <attributes childLayout="center" visibleToMouse="true" childClip="true" />
    <effect>
      <onHover name="colorBarHover" timeType="infinite" color="#7707" post="true"/>
      <onFocus name="pulsate" period="1500" timeType="infinite" startColor="#770f" endColor="#700f" post="true"/>
    </effect>
  </style>
  
  <style id="default-textfield-text">
    <attributes font="verdana-24-shadow.fnt" visibleToMouse="false" align="left" />
  </style>

  <style id="default-textfield-cursor-panel">
    <attributes childLayout="absolute" />
  </style>

  <style id="default-textfield-cursor">
    <attributes filename="textfield/cursor-empty.png" />
    <effect>
      <onActive name="ImageOverlayPulsate" period="300" timeType="infinite" pulsatechildLayout="rectangle" filename="textfield/cursor.png" post="true"/>
    </effect>
  </style>

  <style id="thing-text">
    <attributes font="verdana-24-shadow.fnt" align="center" valign="center" width="25%"/>
    <effect>
      <onHover name="textSize" maxSize="40%" />
    </effect>
  </style>

  <!-- +++++++++++++++++++++++++++++++++++++++ -->  
  <!-- textfield control -->
  <!-- +++++++++++++++++++++++++++++++++++++++ -->  
  <controlDefinition name="textfield" controller="de.lessvoid.nifty.controls.textfield.TextFieldControl" inputMapping="de.lessvoid.nifty.input.mapping.StandardTextField">
    <panel id="textfield-panel" style="default-textfield-panel">
      <panel id="textfield-field" style="default-textfield-field">
        <interact onClick="onClick()" onClickMouseMove="onClickMouseMove()" />
        <text id="textfield-text" style="default-textfield-text" text="">
            <textSelection textColor="#f0ff" />
        </text>
      </panel>
      <panel id="textfield-cursor-panel" style="default-textfield-cursor-panel">
        <image id="textfield-cursor" style="default-textfield-cursor"/>
      </panel>
    </panel>
  </controlDefinition>

  <!-- +++++++++++++++++++++++++++++++++++++++ -->  
  <!-- multiplayerPanel -->
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <controlDefinition name="multiplayerPanel" controller="de.lessvoid.nifty.examples.multiplayer.MultiplayerPanelControl">
    <panel align="center" valign="center" backgroundColor="#ff0f" width="70%" height="80px" childLayout="vertical">
      <panel childLayout="horizontal" height="50%">
        <text font="verdana-24-shadow.fnt" text="Name:" align="left" width="25%" backgroundColor="#f0ff"/>
        <control id="name" name="textfield" />
      </panel>
      <panel childLayout="horizontal" height="50%">
        <text text="Difficulty:" font="verdana-24-shadow.fnt" width="25%" align="left" valign="center" />
        <panel childLayout="horizontal" width="75%" backgroundColor="#00ff">
          <label text="Easy" style="thing-text">
            <interact onClick="easyClicked()"/>
          </label>
          <text text="Medium" style="thing-text" backgroundColor="#f0ff"> 
            <interact onClick="mediumClicked()"/>
          </text>
          <text text="Hard" style="thing-text">
            <interact onClick="mediumClicked()"/>
          </text>
          <text text="Expert" style="thing-text" backgroundColor="#f0ff">
            <interact onClick="mediumClicked()"/>
          </text>
        </panel>
      </panel>
    </panel>
  </controlDefinition>

  <!-- +++++++++++++++++++++++++++++++++++++++ -->  
  <!-- screen -->
  <!-- +++++++++++++++++++++++++++++++++++++++ -->  
  <screen id="start" controller="de.lessvoid.nifty.examples.multiplayer.StartScreenController">
    <layer id="layer" childLayout="center">
      <panel id="box-parent" childLayout="vertical" align="center" valign="center">
		  </panel>
    </layer>
  </screen>
</nifty>

