<?xml version="1.0" encoding="UTF-8"?>
<nifty>

  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <!-- load styles -->
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <useStyles filename="nifty-default-styles.xml" />

  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <!-- start screen -->
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <screen id="start" controller="de.lessvoid.nifty.examples.textalign.TextAlignStartScreen">
    <layer id="layer" backgroundColor="#003f" childLayout="vertical">
      <label id="text1" height="15%" width="75%" backgroundColor="#f60f" text="TextHAlign: center, TextVAlign: top" textHAlign="center" textVAlign="top"/>
      <label id="text2" height="15%" width="75%" backgroundColor="#f80f" text="TextHAlign: center, TextVAlign: center" textHAlign="center" textVAlign="center"/>
      <label id="text3" height="15%" width="75%" backgroundColor="#fa0f" text="TextHAlign: center, TextVAlign: bottom" textHAlign="center" textVAlign="bottom"/>
      <label id="text4" height="15%" width="75%" backgroundColor="#fc0f" text="TextHAlign: left, TextVAlign: center" textHAlign="left" textVAlign="center"/>
      <label id="text5" height="15%" width="75%" backgroundColor="#fe0f" text="TextHAlign: center, TextVAlign: center" textHAlign="center" textVAlign="center"/>
      <label id="text6" height="15%" width="75%" backgroundColor="#ff2f" text="TextHAlign: right, TextVAlign: center" textHAlign="right" textVAlign="center"/>
    </layer>
  </screen>
</nifty>
