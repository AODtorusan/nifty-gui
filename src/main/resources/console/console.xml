<?xml version="1.0" encoding="UTF-8"?>
<nifty>
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <!-- start screen -->
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <screen id="start" controller="de.lessvoid.nifty.examples.console.ConsoleDemoStartScreen">
    <layer id="layer" childLayout="center" backgroundImage="background.png">
      <panel childLayout="center" width="95%" align="center" valign="center">
        <control id="console" name="nifty-console" lines="40" align="center" valign="center">
          <effect>
            <onCustom name="move" direction="top" mode="in" length="200" startDelay="0" inherit="true" alternateEnable="show"/>
            <onCustom name="move" direction="top" mode="out" length="200" startDelay="0" inherit="true" alternateEnable="hide"/>
          </effect>
        </control>
      </panel>
    </layer>
    <layer id="layer2" childLayout="center">
      <text id="text" font="aurulent-sans-17.fnt" text="Press F1 to toggle the best console evar :)
&#13;&#10;(and enter 'exit' in the console to go back...)" align="center" valign="center">
        <effect>
          <onStartScreen name="fade" startColor="#0000" endColor="#000f" length="500" startDelay="0" inherit="true"/>
          <onEndScreen name="fade" startColor="#000f" endColor="#0000" length="500" startDelay="0" inherit="true"/>
        </effect>
      </text>
    </layer>
  </screen>

  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <!-- load default styles and controls -->
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <useControls filename="nifty-default-controls.xml" />
  <useStyles filename="console/custom-console-style.xml" />
  <useStyles filename="nifty-default-styles.xml" />

</nifty>
