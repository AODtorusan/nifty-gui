<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty.xsd http://nifty-gui.sourceforge.net/nifty.xsd">
  <useStyles filename="nifty-default-styles.xml" />
  <useControls filename="nifty-default-controls.xml" />
  <useControls filename="dragndrop/nifty-dragndrop-controls.xml" />
  <useControls filename="dragndrop/nifty-window-controls.xml" />
  
  <style id="dropArea">
    <attributes padding="10px" />
    <effect>
      <onActive name="border" post="true" color="#000f" border="1px" />
    </effect>
  </style>
  
  <style id="window">
    <effect>
      <onActive name="border" post="true" color="#2226" border="3px" />
    </effect>
  </style>
  
  <style id="windowBar">
    <attributes width="100%" height="20px" backgroundColor="#333f" childLayout="center" />
  </style>
  
  <style id="windowContent">
    <attributes width="100%" height="*" padding="8px" backgroundColor="#9996" childLayout="center" />
  </style>

  <screen id="dragndropExample" defaultFocusElement="backButton">
    <layer id="layer" childLayout="center">
      <panel id="dialog" style="nifty-panel" childLayout="center" padding="18px,28px,28px,16px" width="80%" height="90%" align="center" valign="center">
        <panel childLayout="vertical" align="center" valign="center">
          <panel id="1" childLayout="horizontal" height="*">
            <control id="MyDraggable1" name="draggable" backgroundColor="#f60f" width="120px" height="120px" childLayout="center" valign="top">
              <label text="Drag Me!" valign="center" />
            </control>
            <control id="MyDraggable2" name="draggable" backgroundColor="#0f6f" width="120px" height="120px" childLayout="center" valign="top">
              <label text="Drag Me!" valign="center" />
            </control>
            <control id="MyDraggable3" name="draggable" backgroundColor="#6f04" width="120px" height="120px" childLayout="center" valign="top">
              <label text="Drag Me!" valign="center" />
            </control>
          </panel>
          <panel id="2" childLayout="horizontal" height="*">
            <control id="MyDroppable" name="droppable" style="dropArea" width="140px" height="140px">
              <label text="Drop Here!" color="#000f" valign="center" />
            </control>
          </panel>
          <panel id="3" childLayout="vertical" width="100%">
            <control id="backButton" name="button" label="Back to Menu" align="right">
            </control>
          </panel>
        </panel>
      </panel>
    </layer>
    <layer id="windows" childLayout="absolute">
      <control id="1" name="window" title="Drag Me!" width="320px" height="120px">
        <label text="I'm A Window!" valign="center" />
      </control>
      <control id="2" name="window" title="Drag Me!" width="460px" height="240px" y="60%">
        <control id="MyDroppable2" name="droppable" style="dropArea" width="140px" height="140px" align="center" valign="center">
          <label text="Drop Here!" color="#000f" valign="center" />
        </control>
      </control>
      <control id="3" name="window" title="Please Drag Me Too!" width="500px" height="400px" x="400px">
        <label text="I'm Another Window!" valign="center" />
      </control>
    </layer>
  </screen>
</nifty> 