<?xml version="1.0" encoding="UTF-8"?>
<nifty-controls>
  <!-- DRAGGABLE CONTROL -->
  <controlDefinition name="window" childRootId="windowContent" controller="de.lessvoid.nifty.examples.dragndrop.WindowControl">
    <control id="frame" name="draggable" backgroundColor="#0f04" width="320px" height="120px" childLayout="vertical" valign="top" revert="false"
      drop="false" handle="windowBar">
      <panel id="windowBar" width="100%" height="20px" backgroundColor="#f60f" childLayout="horizontal">
        <label text="${title}" valign="left" />
      </panel>
      <panel id="windowContent" width="100%" height="100%" childLayout="center" />
    </control>
  </controlDefinition>
</nifty-controls>