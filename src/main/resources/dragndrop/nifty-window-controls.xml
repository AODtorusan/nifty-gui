<?xml version="1.0" encoding="UTF-8"?>
<nifty-controls>
  <!-- DRAGGABLE CONTROL -->
  <controlDefinition name="window" childRootId="windowContent" controller="de.lessvoid.nifty.examples.dragndrop.WindowControl"
    revert="false" drop="false" handle="windowBar">
    <interact onClick="dragStart()" onClickMouseMove="drag()" onRelease="dragStop()" />
    <panel style="window" childLayout="vertical" valign="top">
      <panel id="windowBar" style="windowBar">
        <label text="$title" valign="center" />
      </panel>
      <panel id="windowContent" style="windowContent" />
    </panel>
  </controlDefinition>
</nifty-controls>