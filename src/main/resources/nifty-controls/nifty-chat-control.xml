<?xml version="1.0" encoding="UTF-8"?>
<nifty-controls xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd">

  <controlDefinition name="chat-control" controller="de.lessvoid.nifty.controls.chatcontrol.ChatController">
    <panel childLayout="horizontal" width="100%" height="100%" align="center">
      <panel childLayout="vertical" width="75%" height="100%">
        <panel childLayout="horizontal" align="left" width="100%" height="*" id="chatBox-panel">
          <control backgroundColor="#f00f" id="chatBox" name="listBox" vertical="optional" horizontal="off" displayItems="16" selection="Disabled" viewConverterClass="de.lessvoid.nifty.controls.chatcontrol.ChatBoxViewConverter">
            <panel backgroundColor="#ff0f" childLayout="horizontal" width="100%" align="center">
              <image id="#chat-line-icon" width="25px" height="25px" backgroundColor="#ff0f" />
              <control id="#chat-line-text" name="label" align="left" backgroundColor="#0f0f" textHAlign="left" height="25px" width="*" text="$text" wrap="true" />
            </panel>
          </control>
        </panel>
        <panel backgroundColor="#f0ff" childLayout="horizontal" align="left" width="100%" height="25px" id="chat-text-line">
        <!-- 
          <control id="chat-text-input" name="textfield" width="85%" height="25px" />
          <control id="chat-text-button" name="button" label="send" width="15%" height="25px">
            <interact onClick="sendText()" />
          </control>
      -->
        </panel>
      </panel>
      <!--
      <panel childLayout="vertical" width="25%" height="100%">
        <control id="playerList" name="listBox" vertical="optional" horizontal="off" displayItems="16" selection="Disabled" height="100%" viewConverterClass="de.lessvoid.nifty.controls.chatcontrol.ChatBoxViewConverter">
          <panel childLayout="horizontal" width="100%" align="center">
            <image id="chat-line-icon" width="25px" height="25px" />
            <control name="label" id="chat-line-text" align="left" textHAlign="left" height="25px" width="*" text="$text" wrap="true" />
          </panel>
        </control>
      </panel>
       -->
    </panel>
  </controlDefinition>

</nifty-controls>