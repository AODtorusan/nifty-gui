<?xml version="1.0" encoding="UTF-8"?>
<nifty-controls>
  <controlDefinition name="verticalSlider" style="nifty-vertical-slider" controller="de.lessvoid.nifty.controls.slider.SliderControl" inputMapping="de.lessvoid.nifty.controls.scrollbar.inputmapping.ScrollbarInputMapping">
    <panel style="#panel" focusable="true">
      <image id="nifty-internal-slider-up" style="#up">
        <interact onClickRepeat="upClick()" />
      </image>
      <image id="nifty-internal-slider-background" style="#background">
        <interact onClick="mouseClick()" onClickMouseMove="mouseClick()" />
        <image id="nifty-internal-slider-position" style="#position">
          <interact onClick="mouseClick()" onClickMouseMove="mouseClick()" />
        </image>
      </image>
      <image id="nifty-internal-slider-down" style="#down">
        <interact onClickRepeat="downClick()" />
      </image>
    </panel>
  </controlDefinition>

  <controlDefinition name="horizontalSlider" style="nifty-horizontal-slider" controller="de.lessvoid.nifty.controls.slider.SliderControl" inputMapping="de.lessvoid.nifty.controls.scrollbar.inputmapping.ScrollbarInputMapping">
    <panel style="#panel">
      <image id="nifty-internal-slider-up" style="#left">
        <interact onClickRepeat="upClick()" />
      </image>
      <image id="nifty-internal-slider-background" style="#background">
        <interact onClick="mouseClick()" onClickMouseMove="mouseClick()" />
        <image id="nifty-internal-slider-position" style="#position">
          <interact onClick="mouseClick()" onClickMouseMove="mouseClick()" />
        </image>
      </image>
      <image id="nifty-internal-slider-down" style="#right">
        <interact onClickRepeat="downClick()" />
      </image>
    </panel>
  </controlDefinition>
</nifty-controls>
