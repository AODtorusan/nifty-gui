<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>lessvoid</groupId>
  <artifactId>nifty-examples</artifactId>
  <name>nifty-examples</name>
  <version>1.0</version>
  <url>http://nifty-gui.sourceforge.net/nifty-examples/project-info.html</url>
  <scm>
    <connection>scm:svn:https://nifty-gui.svn.sourceforge.net/svnroot/nifty-gui/nifty-examples/tags/nifty-examples-1.0</connection>
    <developerConnection>scm:svn:https://nifty-gui.svn.sourceforge.net/svnroot/nifty-gui/nifty-examples/tags/nifty-examples-1.0</developerConnection>
    <url>scm:svn:http://nifty-gui.svn.sourceforge.net/viewvc/nifty-gui/nifty-examples/tags/nifty-examples-1.0</url>
  </scm>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>lessvoid</groupId>
      <artifactId>nifty</artifactId>
      <version>1.0</version>
    </dependency>
    <dependency>
      <groupId>lessvoid</groupId>
      <artifactId>nifty-style-black</artifactId>
      <version>1.0</version>
    </dependency>
    <dependency>
      <groupId>lessvoid</groupId>
      <artifactId>nifty-default-controls</artifactId>
      <version>1.0</version>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>2.2-beta-3</version>
        <configuration>
          <descriptors>
            <descriptor>src/assemble/assemble.xml</descriptor>
          </descriptors>
          <archive>
            <manifest>
              <mainClass>de.lessvoid.nifty.examples.all.AllExamplesMain</mainClass>
            </manifest>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <archive>
            <manifest>
              <mainClass>de.lessvoid.nifty.examples.helloworld.HelloWorldExample</mainClass>
            </manifest>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-eclipse-plugin</artifactId>
        <configuration>
          <workspaceCodeStylesURL>https://nifty-gui.svn.sourceforge.net/svnroot/nifty-gui/nifty/trunk/my-checkstyle.xml</workspaceCodeStylesURL>
        </configuration>
      </plugin>
    </plugins>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
      </resource>
    </resources>
  </build>
  <distributionManagement>
    <repository>
      <id>nifty-maven-repo.sourceforge.net</id>
      <url>
        scp://web.sourceforge.net/home/groups/n/ni/nifty-gui/htdocs/nifty-maven-repo
      </url>
    </repository>
    <site>
      <id>nifty.sourceforge.net</id>
      <url>
        scp://web.sourceforge.net/home/groups/n/ni/nifty-gui/htdocs/nifty-examples
      </url>
    </site>
  </distributionManagement>
  <repositories>
    <repository>
      <id>nifty-maven-repo.sourceforge.net</id>
      <url>http://nifty-gui.sourceforge.net/nifty-maven-repo</url>
    </repository>
  </repositories>
  <profiles>
    <profile>
      <id>editor</id>
      <build>
        <plugins>
          <plugin>
           <artifactId>maven-assembly-plugin</artifactId>
           <configuration>
             <finalName>nifty-editor</finalName>
             <descriptors>
               <descriptor>src/assemble/assemble.xml</descriptor>
             </descriptors>
             <archive>
               <manifest>
                 <mainClass>de.lessvoid.nifty.editor.EditorMain</mainClass>
               </manifest>
             </archive>
           </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>