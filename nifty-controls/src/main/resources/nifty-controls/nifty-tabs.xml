<?xml version="1.0" encoding="UTF-8"?>
<nifty-controls>
  <controlDefinition controller="de.lessvoid.nifty.controls.tabs.TabGroupControl" name="tabGroup"
                     childRootId="#tab-content-panel" style="nifty-tabs">
    <panel id="#tabs-panel" childLayout="vertical">
      <panel id="#tab-button-panel" childLayout="horizontal">
        <control id="#button-template" name="button"/>
      </panel>
      <panel id="#tab-content-panel" childLayout="center"/>
    </panel>
  </controlDefinition>

  <controlDefinition controller="de.lessvoid.nifty.controls.tabs.TabControl" name="tab"
                     childRootId="#content" style="nifty-tab">
    <panel id="#content"/>
  </controlDefinition>
</nifty-controls>
