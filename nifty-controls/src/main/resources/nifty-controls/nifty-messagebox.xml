<?xml version="1.0" encoding="UTF-8"?>
<nifty-controls>
	<controlDefinition name="nifty-messagebox" style="nifty-panel"
		controller="de.lessvoid.nifty.controls.MessageBox">
		<panel style="panel" childLayout="vertical" id="#messagebox"
			width="500px" height="250px">
			<panel id="#message" childLayout="horizontal" align="left"
				valign="center" textVAlign="cerent" height="195px">
				<panel childLayout="center" valign="center">
					<image id="#message-icon" filename="messagebox/WARN.jpg"
						width="25px" height="25px" />
				</panel>
				<panel width="10px" height="100%"></panel>
				<control id="#message-text" name="label" align="left"
					textHAlign="left" textVAlign="center" wrap="true" />
			</panel>
			<panel id="#buttons" align="right" childLayout="horizontal">
			</panel>
		</panel>
	</controlDefinition>

	<popup id="niftyPopupMessageBox" childLayout="center">
		<control id="#messagebox" name="nifty-messagebox" />
	</popup>
</nifty-controls>