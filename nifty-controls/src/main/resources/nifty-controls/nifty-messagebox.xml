<?xml version="1.0" encoding="UTF-8"?>
<nifty-controls>
	<controlDefinition name="nifty-messagebox" style="nifty-panel" controller="de.lessvoid.nifty.controls.messagebox.MessageBoxControl">
		<popup style="panel" childLayout="vertical">
			<panel id="#message" childLayout="horizontal">
				<image id="#message-icon" filename="$iconImage" />
				<control id="#message-text" name="label" align="left"
					textHAlign="left" height="$messageText" wrap="true" />
			</panel>
			<panel id="#buttons" align="right" childLayout="horizontal">
			</panel>
		</popup>
	</controlDefinition>
</nifty-controls>